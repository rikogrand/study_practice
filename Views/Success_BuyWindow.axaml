<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="study_practice.Success_BuyWindow"
        Title="Переход"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center">Вы успешно купили курс</TextBlock>
        <Button Grid.Row="1" HorizontalAlignment="Left" Margin="150"  VerticalAlignment="Center"  Grid.Column="1" x:Name="ScheduleButton" Content="Посмотреть расписание" Click="ScheduleButton_OnClick"></Button>
        <Button Grid.Row="2" HorizontalAlignment="Right" Margin="150"  VerticalAlignment="Center" Grid.Column="2" x:Name="TeacherButton" Content="Посмотреть преподавателей" Click="TeacherButton_OnClick"></Button>
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" Spacing="10" Orientation="Horizontal">
        </StackPanel>
    </Grid>
</Window>

